@model List<CartProduct>

<h2>Shopping Cart</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @* Assume Product Name is a placeholder *@
                    <td>Product Name</td>
                    <td>@item.cost.ToString("C")</td>
                    <td>@item.quantity</td>
                    <td>@((item.cost * item.quantity).ToString("C"))</td>
                </tr>
            }
            <tr>
                <td colspan="3" style="text-align:right"><strong>Subtotal:</strong></td>
                <td><strong>@(Model.Sum(item => item.cost * item.quantity).ToString("C"))</strong></td>
            </tr>
        </tbody>
    </table>
}
else
{
    <p>Your cart is empty.</p>
}
