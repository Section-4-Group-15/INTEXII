@{
    ViewData["Title"] = "Brickwell Home";
}
@model IEnumerable<INTEXII.Models.Product>

<body>
    <!-- ======= Header ======= -->

    <main id="main">

        <!-- ======= Hero Slider Section ======= -->
        <section id="hero-slider" class="hero-slider">
            <div class="container-md" data-aos="fade-in">
                <div class="row">
                    <div class="col-12">
                        <div class="swiper sliderFeaturedPosts">
                            <div class="swiper-wrapper">
                                @if (ViewData["RandomProducts"] != null)
                                {
                                    var randomProducts = ViewData["RandomProducts"] as List<Product>;
                                    foreach (var product in randomProducts)
                                    {
                                        <div class="swiper-slide">
                                            <a href="@Url.Action("IndProducts", new { id = product.Product_ID })" class="img-bg d-flex align-items-end" style="background-image: url('@product.Img_Link'); background-size: contain; background-repeat: no-repeat; background-position: center; height: 400px;">
                                                <div class="img-bg-inner">
                                                    <h2>@product.Name</h2>
                                                </div>
                                            </a>
                                        </div>
                                    }
                                }
                            </div>
                            <div class="custom-swiper-button-next">
                                <span class="bi-chevron-right"></span>
                            </div>
                            <div class="custom-swiper-button-prev">
                                <span class="bi-chevron-left"></span>
                            </div>

                            <div class="swiper-pagination"></div>
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- End Hero Slider Section -->
        <section id="aurora-bricks" class="aurora-bricks">
            <div class="container" data-aos="fade-up">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h1 class="section-title">Discover Aurora Bricks</h1>
                        <br />
                        <div class="section-description">
                            <p>
                                Welcome to Aurora Bricks, the premier destination for LEGO enthusiasts and master builders alike. Immerse yourself in a world of endless creativity and boundless imagination with our vast collection of LEGO kits.

                                At Aurora Bricks, we curate an extensive selection of LEGO sets, ranging from iconic landmarks and architectural marvels to fantastical realms and beloved movie scenes. Whether you're a seasoned builder seeking a new challenge or a beginner exploring the magic of LEGO, you'll find something to inspire and delight you here.
                            </p>
                            <p>
                                Our commitment to quality ensures that every LEGO set we offer meets the highest standards of craftsmanship and innovation. From intricate details to immersive storytelling, each kit invites you to embark on a journey of creativity and discovery.

                                Join our vibrant community of builders and share your passion for LEGO. Connect with fellow enthusiasts, exchange ideas, and showcase your creations. Whether you're building solo or collaborating with others, Aurora Bricks is your ultimate companion on your LEGO adventure.
                            </p>
                            <p>
                                Ready to elevate your building experience? Explore Aurora Bricks today and unlock a world of endless possibilities.
                            </p>
                        </div>
                        <a asp-controller="Home" asp-action="Products" class="btn btn-primary">Shop Now</a>
                    </div>
                </div>
            </div>
        </section><!-- End Aurora Bricks Section -->
        <!-- ======= Recommended Items Section ======= -->
        <section id="recommended-items" class="recommended-items">
            <div class="container" data-aos="fade-up">
                <div class="section-title text-center">
                    @if (ViewData["Recommendations"] != null && ((List<UserRec>)ViewData["Recommendations"]).Count > 0)
                    {
                        <h2>Recommended for You</h2>
                        <p>Explore our top picks to complement your creativity.</p>
                    }
                    else
                    {
                        <h2>Explore Fan Favorites</h2>
                        <p>Discover our most popular items loved by LEGO enthusiasts.</p>
                    }
                </div>
                <div class="row justify-content-center">
                    @if (ViewData["Recommendations"] != null && ((List<UserRec>)ViewData["Recommendations"]).Count > 0)
                    {
                        var recommendations = ViewData["Recommendations"] as List<UserRec>;
                        foreach (var recommendation in recommendations)
                        {
                            <div class="col-lg-3 col-md-6 col-12">
                                <div class="recommended-item text-center">
                                    <a href="@Url.Action("IndProducts", new { id = recommendation.Product_ID })">
                                        <img src="@recommendation.RecommendationUrl" alt="@recommendation.RecommendationName" class="img-fluid" style="max-height: 200px; width: auto;">
                                        <h3>@recommendation.RecommendationName</h3>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <!-- Default items if no recommendations found or user is not logged in -->
                        <!-- Item 1 -->
                        <div class="col-lg-3 col-md-6 col-12">
                            <div class="recommended-item text-center">
                                <a href="@Url.Action("IndProducts", new { id = 1 })">
                                    <img src="https://www.lego.com/cdn/cs/set/assets/bltfa6c9196a514bb03/31157.png?format=webply&fit=bounds&quality=75&width=800&height=800&dpr=1" alt="Item 1" class="img-fluid" style="max-height: 200px; width: auto;">
                                    <h3>Exotic Peacock</h3>
                                </a>
                            </div>
                        </div>
                        <!-- Item 2 -->
                        <div class="col-lg-3 col-md-6 col-12">
                            <div class="recommended-item text-center">
                                <a href="@Url.Action("IndProducts", new { id = 2 })">
                                    <img src="https://www.lego.com/cdn/cs/set/assets/blt2ab62c2c368f72f6/31152.png?format=webply&fit=bounds&quality=75&width=800&height=800&dpr=1" alt="Item 2" class="img-fluid" style="max-height: 200px; width: auto;">
                                    <h3>Space Astronaut</h3>
                                </a>
                            </div>
                        </div>
                        <!-- Item 3 -->
                        <div class="col-lg-3 col-md-6 col-12">
                            <div class="recommended-item text-center">
                                <a href="@Url.Action("IndProducts", new { id = 3 })">
                                    <img src="https://www.lego.com/cdn/cs/set/assets/bltde655e8359417b7d/43217.png?format=webply&fit=bounds&quality=75&width=800&height=800&dpr=1" alt="Item 3" class="img-fluid" style="max-height: 200px; width: auto;">
                                    <h3>Up House</h3>
                                </a>
                            </div>
                        </div>
                        <!-- Item 4 -->
                        <div class="col-lg-3 col-md-6 col-12">
                            <div class="recommended-item text-center">
                                <a href="@Url.Action("IndProducts", new { id = 4 })">
                                    <img src="https://www.lego.com/cdn/cs/set/assets/blt47c94c595257dd3a/76429.png?format=webply&fit=bounds&quality=75&width=800&height=800&dpr=1" alt="Item 4" class="img-fluid" style="max-height: 200px; width: auto;">
                                    <h3>Talking Sorting Hat</h3>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
        <!-- End Recommended Items Section -->

        <!-- End Recommended Items Section -->
    </main><!-- End #main -->
</body>